#ifndef VC_INT_V
#define VC_INT_V

#include "vector.h"

#ifdef ENABLE_LARRABEE
#define VECTOR_NAMESPACE Larrabee
#elif defined(USE_SSE)
#define VECTOR_NAMESPACE SSE
#else
#define VECTOR_NAMESPACE Simple
#endif

namespace Vc
{
  typedef VECTOR_NAMESPACE::Vector<int> int_v;
} // namespace Vc

#undef VECTOR_NAMESPACE

#endif // VC_INT_V
